<main class="form-signin w-100 m-auto">
    <br />
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Registro</button>
        </li>
    </ul>
    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <form action="@Url.Action("CrearCuenta", "Acceso")" method="post">
            <br />
            <h1 class="h3 mb-3 fw-normal">Registro</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="id" placeholder="ID" name="Cedula">
                <label for="fullName">Cédula</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="fullName" placeholder="Full Name" name="NombreCompleto">
                <label for="fullName">Nombre Completo</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="Email">
                <label for="floatingInput">Correo electrónico</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="Contrasena">
                <label for="floatingPassword">Contraseña</label>
            </div>
            <br />

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            <button class="btn btn-primary w-100 py-2" type="submit">Registrarse</button>
        </form>
    </div>

    <div>
        <div>
            Ya tienes una cuenta? <a href="@Url.Action("InicioSesion", "Acceso")">Iniciar sesión</a>
        </div>
    </div>
</main>