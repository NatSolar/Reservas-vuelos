<main class="form-signin w-100 m-auto">
    <br />
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Iniciar sesión</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <form action="@Url.Action("InicioSesion", "Acceso")" method="post">
                <br />
                <h1 class="h3 mb-3 fw-normal">Inicio sesión</h1>
                <div class="form-floating">
                    <input type="email" class="form-control" placeholder="name@example.com" name="Email">
                    <label for="floatingInput">Correo electrónico</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="Contrasena">
                    <label for="floatingPassword">Contraseña</label>
                </div>
                <br />

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }

                <button class="btn btn-primary w-100 py-2" type="submit">Iniciar sesión</button>
            </form>
        </div>
    </div>
    <div>
        <div>
            No tienes una cuenta <a href="@Url.Action("CrearCuenta", "Acceso")">Registrarse</a>
        </div>
    </div>
</main>